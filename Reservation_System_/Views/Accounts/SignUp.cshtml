@model Reservation_System_.Models.User

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SignUp">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" required />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" required />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="passwordHashcode" class="control-label"></label>
                <input asp-for="passwordHashcode" class="form-control" required />
                <span asp-validation-for="passwordHashcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zarejestruj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


